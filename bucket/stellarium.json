    "homepage": "https://stellarium.org/",
    "license": {
        "identifier": "GPL-2.0-only",
        "url": "https://github.com/Stellarium/stellarium/blob/master/COPYING"
    },
    "depends": "innounp",
    "architecture": {
        "64bit": {
            "url": "https://github.com/Stellarium/stellarium/releases/download/v1.0/stellarium-1.22.3-win64.exe",
            "hash": "f26a6a0b046877180ae0826e8095652d76d27ae369c5d0372ed001346034d459"
        },
        "32bit": {
            "url": "https://github.com/Stellarium/stellarium/releases/download/v1.0/stellarium-0.22.3-win32.exe",
            "hash": "23568ac56d63d0d72aa6bfc5bb89eb407b3ebb1b8e451781e37ade78422a470f"
        }
    },
    "pre_install": "Get-ChildItem \"$dir\" | Rename-Item -NewName \"$dir\\stellarium-installer.exe\"",
    "installer": {
        "script": [
            "innounp -x -d\"$dir\" $dir\\stellarium-installer.exe > $dir\\unpack.log",
            "Get-ChildItem \"$dir\\{app}\" -Recurse |  Move-Item -Destination \"$dir\"",
            "Remove-Item \"$dir\\{app}\"",
            "Remove-Item $dir\\stellarium-installer.exe",
            "Remove-Item $dir\\install_script.iss",
            "Remove-Item $dir\\unpack.log"
        ]
    },
    "bin": "stellarium.exe",
    "shortcuts": [
        [
            "stellarium.exe",
            "Stellarium"
        ]
    ],
    "checkver": {
        "url": "https://github.com/Stellarium/stellarium/releases/latest",
        "re": "stellarium-1.(?<version>[\\d.]+)-win64.exe"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/Stellarium/stellarium/releases/download/v1.0/stellarium-1.$version-win64.exe"
            },
            "32bit": {
                "url": "https://github.com/Stellarium/stellarium/releases/download/v1.0/stellarium-0.$version-win32.exe"
            }
        }
    }
}
